<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.highsys.fragments.FirmwareKit">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="特别鸣谢搞机助手\n欢迎加入搞机助手内测群\n878394776\n注意不要备份太大的分区\n比如system,vendor,严禁备份\nuserdata\n使用方法:按部就班"
        android:textSize="10dp"
        android:layout_margin="15dp"/>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#00000000">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/backup_icon_foreground"
            android:layout_gravity="center" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_margin="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#F44336">
                    <RelativeLayout
                        android:id="@+id/scan_disk_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/scan_disk_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="扫描分区"
                       android:textSize="@dimen/ksw_md_thumb_ripple_size"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:layout_toEndOf="@id/scan_disk_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/scan_disk_bt"
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/go_foreground" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#F44336">
                    <RelativeLayout
                        android:id="@+id/choose_disk_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/choose_disk_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="选择分区"
                       android:textSize="@dimen/ksw_md_thumb_ripple_size"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:layout_toEndOf="@id/choose_disk_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/choose_disk_bt"
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/go_foreground" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#F44336">
                    <RelativeLayout
                        android:id="@+id/check_disk_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/check_disk_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="检查分区"
                       android:textSize="@dimen/ksw_md_thumb_ripple_size"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:layout_toEndOf="@id/check_disk_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/check_disk_bt"
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/go_foreground" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#F44336">
                    <RelativeLayout
                        android:id="@+id/back_disk_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/back_disk_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="备份分区"
                            android:textSize="@dimen/ksw_md_thumb_ripple_size"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"/>
                        <LinearLayout
                            android:layout_toEndOf="@id/back_disk_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/back_disk_bt"
                                android:gravity="center"
                                android:layout_gravity="right"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:background="@drawable/go_foreground" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </FrameLayout>
</ScrollView>