<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0000"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:layout_width="270dp"
        android:layout_height="370dp"
        android:background="@drawable/windowsshape">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rose"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:orientation="vertical"
            android:layout_height="370dp">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_gravity="right"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_marginHorizontal="8dp"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="30dp">
                    <Button
                        android:text="退出"
                        android:id="@+id/exitwin"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="#0000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:textColor="#7CB342"
                android:id="@+id/restoredir"
                android:text="未知了，小朋友"
                android:textSize="8dp"
                android:gravity="center|bottom"
                android:background="#001A81BC"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                    <Button
                        android:layout_marginVertical="10dp"
                        android:id="@+id/btn1"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/mainactivityauttonshape"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_marginVertical="10dp"
                        android:id="@+id/btn2"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/mainactivityauttonshape"
                        android:layout_gravity="center"/>


                    <Button
                        android:layout_marginVertical="10dp"
                        android:id="@+id/btn3"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/mainactivityauttonshape"
                        android:layout_gravity="center"/>

                    <Button
                        android:layout_marginVertical="10dp"
                        android:id="@+id/btn4"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/mainactivityauttonshape"
                        android:layout_gravity="center"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <TextView
                    android:id="@+id/sdtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UFS"
                    android:textColor="#43A047"/>


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>




</LinearLayout>
