<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/windowsshape"
    android:orientation="vertical"
    tools:context="com.highsys.pages.thehelps">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00DDDDDD">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="HELP"
                android:textSize="27dp"
                android:textColor="#454242"
                android:gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/iconnull"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/message"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="我不想写教程，交给各位了\nI don't want to make a help passage,a work for you\nヽ(✿ﾟ▽ﾟ)ノ"/>
        <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:text="返回"
        android:id="@+id/backto"
        android:background="@drawable/buttonshape"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:text="打开我的微博"
        android:id="@+id/jumptoweibo"
        android:background="@drawable/buttonshape"/>
</LinearLayout>